<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/text_view_background"
        android:gravity="center"
        android:padding="20dp"
        android:text="You are in safe zone!\n\nIf you ever feel any of the symptom in the exhibited questions you passed through, please come back for further assessments!"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/emergency_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="gotoEmergencyPage"
        android:padding="8dp"
        android:text="Emergency Contacts"
        android:textColor="@color/white"
        app:cornerRadius="18dp" />


</LinearLayout>
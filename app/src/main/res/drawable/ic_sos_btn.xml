<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:width="1dip" android:color="@color/colorPrimary" />
            <stroke android:width="1dp" android:color="@color/edit_text_bg" />
            <corners android:bottomLeftRadius="16dp" android:topLeftRadius="16dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <corners android:bottomLeftRadius="16dp" android:topLeftRadius="16dp" />
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="1dp" android:color="@color/edit_text_bg" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners android:bottomLeftRadius="16dp" android:topLeftRadius="16dp" />
            <solid android:color="@color/edit_text_bg" />
            <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</selector>